{{#> layout }}
<div class="card auth__card">
    <h2 class="card__title">Registerr</h2>
  <form action="/register" method="post">
    <div>
      <label class="form__label" for="username">Username</label>
      <input class="form__input" type="text" name="username" id="username" />
    </div>
    <div>
      <label class="form__label" for="password">Password</label>
      <input class="form__input" type="password" name="password" id="password" />
    </div>
    <div>
      <label class="form__label" for="passwordConfirmation">Password Confirmation</label>
      <input class="form__input" type="password"  name="passwordConfirmation" id="passwordConfirmation" />
    </div>
    {{#if error}}
      <div class="form__error">
        {{ error }}
      </div>
    {{/if}}
    <div class="form__footer">
      <button class="form__button" type="submit">Register</button>

      <div>
        Already registered? <a href="/login">Click Here</a>
      </div>
    </div>
   </form>
</div>
{{/layout}}