{{#> layout }}
  {{#if user}}
    <h2>{{ user.username }}'s Profile</h2>
  {{/if}}

  <h3>Posts</h3>
  {{#if posts.length}}
    {{#each posts}}
      <div class="post">
        <p class="post__content">{{ content }}</p>
        <div class="post__footer">
          Posted {{ createdAtRelative }}
        </div>
      </div>
    {{/each}}
  {{else}}
    <p>No posts to show</p>
  {{/if}}
{{/layout}}